<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mansi.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Welcome" android:configChanges="orientation|screenSize|keyboardHidden" android:label="MathTrivia!">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" android:configChanges="orientation|screenSize|keyboardHidden" android:label="Prime Checker">
        </activity>

        <activity android:name=".Hint" android:configChanges="orientation|screenSize|keyboardHidden" android:label="Hints !!">
        </activity>

        <activity android:name=".Cheat" android:configChanges="orientation|screenSize|keyboardHidden" android:label="Correct Answer !!">
        </activity>

    </application>

</manifest>